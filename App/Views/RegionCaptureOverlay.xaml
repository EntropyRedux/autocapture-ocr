<Window x:Class="AutoCaptureOCR.App.Views.RegionCaptureOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Region Selection"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowState="Normal"
        Topmost="True"
        ShowInTaskbar="False"
        Cursor="Cross"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseMove="Window_MouseMove"
        MouseLeftButtonUp="Window_MouseLeftButtonUp"
        KeyDown="Window_KeyDown">

    <Canvas x:Name="SelectionCanvas">
        <!-- Semi-transparent overlay -->
        <Rectangle x:Name="OverlayRectangle"
                   Fill="#80000000"
                   Width="{Binding ActualWidth, ElementName=SelectionCanvas}"
                   Height="{Binding ActualHeight, ElementName=SelectionCanvas}"/>

        <!-- Selection rectangle -->
        <Rectangle x:Name="SelectionRectangle"
                   Stroke="#00FF00"
                   StrokeThickness="2"
                   Fill="Transparent"
                   Visibility="Collapsed"/>

        <!-- Dimension label -->
        <Border x:Name="DimensionLabel"
                Background="#CC000000"
                BorderBrush="#00FF00"
                BorderThickness="1"
                CornerRadius="3"
                Padding="8,4"
                Visibility="Collapsed">
            <TextBlock x:Name="DimensionText"
                       Foreground="White"
                       FontSize="13"
                       FontFamily="Consolas"/>
        </Border>

        <!-- Instructions -->
        <Border Background="#CC000000"
                BorderBrush="White"
                BorderThickness="1"
                CornerRadius="4"
                Padding="16,8"
                Canvas.Top="20"
                Canvas.Left="20">
            <StackPanel>
                <TextBlock Text="Select Capture Region"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,4"/>
                <TextBlock Text="• Drag to select area"
                           Foreground="#CCCCCC"
                           FontSize="11"/>
                <TextBlock Text="• Press [Enter] or release mouse to capture"
                           Foreground="#CCCCCC"
                           FontSize="11"/>
                <TextBlock Text="• Press [Esc] to cancel"
                           Foreground="#CCCCCC"
                           FontSize="11"/>
            </StackPanel>
        </Border>
    </Canvas>
</Window>
